{
  "name": "@phantom-zone/codegen",
  "version": "0.0.1",
  "description": "Generate React form components from Zod schemas",
  "type": "module",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "phantom-zone": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --exclude '**/*.spec.ts'",
    "test:unit": "vitest run --exclude '**/*.spec.ts'",
    "test:spec": "vitest run --include '**/*.spec.ts'",
    "test:all": "vitest run"
  },
  "peerDependencies": {
    "zod": "^4.0.0"
  },
  "dependencies": {
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "zocker": "^3.0.0",
    "zod": "^4.0.0"
  }
}
