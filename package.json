{
  "name": "phantom-zone",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "phantom-zone": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --exclude '**/*.spec.ts'",
    "test:unit": "vitest run --exclude '**/*.spec.ts'",
    "test:spec": "vitest run --include '**/*.spec.ts'",
    "test:all": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "preflight": "pnpm lint && pnpm typecheck && pnpm test:unit",
    "flightcheck": "pnpm lint && pnpm typecheck && pnpm test:all",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "zod": "^3.24.0 || ^4.0.0"
  },
  "dependencies": {
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "lefthook": "^2.0.15",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0",
    "zocker": "^3.0.0",
    "zod": "^4.0.0"
  }
}
