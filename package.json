{
  "name": "phantom-zone",
  "version": "0.0.1",
  "description": "Generate React form components from Zod schemas",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ezmode-games/phantom-zone.git"
  },
  "homepage": "https://ezmode.games/oss/phantom-zone",
  "keywords": [
    "zod",
    "react",
    "form",
    "codegen",
    "typescript",
    "tanstack-form",
    "shadcn",
    "rafters"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "phantom-zone": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --exclude '**/*.spec.ts'",
    "test:unit": "vitest run --exclude '**/*.spec.ts'",
    "test:spec": "vitest run --include '**/*.spec.ts'",
    "test:all": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "preflight": "pnpm lint && pnpm typecheck && pnpm test:unit",
    "flightcheck": "pnpm lint && pnpm typecheck && pnpm test:all",
    "prepublishOnly": "pnpm build",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "peerDependencies": {
    "zod": "^4.0.0"
  },
  "dependencies": {
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.0.9",
    "lefthook": "^2.0.15",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0",
    "zocker": "^3.0.0",
    "zod": "^4.0.0"
  }
}
