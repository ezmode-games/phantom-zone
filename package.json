{
  "name": "phantom-zone",
  "version": "0.0.1",
  "private": true,
  "description": "Form builder platform with code generation, visual designer, and block editor",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ezmode-games/phantom-zone.git"
  },
  "homepage": "https://ezmode.games/oss/phantom-zone",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "test:unit": "pnpm -r test:unit",
    "test:all": "pnpm -r test:all",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "preflight": "pnpm lint && pnpm typecheck && pnpm test:unit",
    "flightcheck": "pnpm lint && pnpm typecheck && pnpm test:all",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.0.9",
    "lefthook": "^2.0.15",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  }
}
